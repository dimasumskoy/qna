context = ('<%= @comment.commentable_type.downcase %>')
contextId = ('div#' + context + '-<%= @comment.commentable.id %>')
contextForm = (contextId + ' ' + 'form#new_comment')

<% if @comment.errors.any? %>
  <% @comment.errors.full_messages.each do |message| %>
    $(contextForm).append('<%= j message %>');
  <% end %>
<% else %>
  $(contextId + ' ' + '.comments').append('<%= j render @comment %>');
  $(contextForm + ' ' + '#comment_body').val('');
<% end %>